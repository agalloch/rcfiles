#Colours
#White minimal theme for white background
#
#Spam
color index magenta default '~h "X-Spam-Status:.*score=(4|5)."'
color index magenta default '~h "X-Spam-Status:.*score=(6|7)."'

# Headers
color hdrdefault red                   default

# Messages
color body       cyan            default        ^gpg:.*
color body       default             default        " [;:]-*[)>(<|]"
color quoted     magenta      default
color signature  default            default
color attachment cyan          default
color tilde      black            default

#Index( order matters !!!)
color normal     black           default
color indicator  default     cyan
#color index      green     default     '~p !~l'   # To: myself, but not in from maillist
color index      blue            default     ~Q         # Done mails(already replied)
color index      blue          default     '~P'       # mail from myself
color index      yellow    default     ~F         # Important
color index      red       default     '~N'       # New
color index      red             default     '~l ~N'    # New from lists
color index      white            default     ~D         # Deleted
color error      red             default

color tree       magenta         default

color message    blue      default
color status     white    black
color bold       yellow    default
color markers    red             default

