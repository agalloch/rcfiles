[alias]
  files = show --name-only --oneline
  update = add --update
  lg = log --graph --oneline --decorate
  la = log --graph --oneline --decorate --all
  ls = log --oneline --decorate  -12
  meld = !~/bin/git-meld.pl

[core]
  editor = vim
  whitespace=fix,-indent-with-non-tab,trailing-space,cr-at-eol
  gitproxy = ~/bin/gitproxy

[pager]
	log = off

[branch]
  autosetuprebase = always

[push]
  default = tracking

[diff]
  tool = meld

[merge]
  tool = meld

[help]
  autocorrect = 1

[color]
  ui = on

[color "branch"]
  current = yellow reverse
  local = yellow
  remote = green

[color "diff"]
  meta = yellow bold
  frag = magenta bold
  old = red bold
  new = green bold
  whitespace = red reverse

[color "status"]
  added = yellow
  changed = green
  untracked = cyan

[color "diff"]
  whitespace = red reverse

